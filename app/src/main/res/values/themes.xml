<resources>
    <!-- Base application theme. -->
    <style name="Theme.EffectiveMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EffectiveMobile.Splash" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="windowSplashScreenBackground">@color/dark_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!--   makes status bar icons dark     -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="postSplashScreenTheme">@style/Theme.EffectiveMobile</item>
    </style>
</resources>