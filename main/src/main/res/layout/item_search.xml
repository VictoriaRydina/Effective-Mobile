<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SearchView
        android:id="@+id/search_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_height"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_marginEnd="@dimen/margin_12_dp"
        android:background="@drawable/background_search_view"
        app:layout_constraintBottom_toBottomOf="@+id/qr_code_button"
        app:layout_constraintEnd_toStartOf="@+id/qr_code_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </SearchView>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/qr_code_button"
        android:layout_width="@dimen/search_height"
        android:layout_height="@dimen/search_height"
        android:layout_marginEnd="@dimen/margin_32_dp"
        android:background="@drawable/selected_category"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_qr_code"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>