<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_4_dp"
    android:layout_marginStart="@dimen/margin_4_dp"
    android:layout_marginEnd="@dimen/margin_4_dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_buy_button">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/phone_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_8_dp"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:layout_marginEnd="@dimen/margin_8_dp"
        android:layout_marginBottom="@dimen/margin_8_dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/discount_phone_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/samsung" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:elevation="@dimen/margin_4_dp"
        tools:text="$1,047"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/medium_text_size"
        android:fontFamily="@font/mark_pro_heavy"
        app:layout_constraintBottom_toTopOf="@+id/phone_name"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/discount_phone_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8_dp"
        android:elevation="@dimen/margin_4_dp"
        tools:text="$1,500"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/mark_pro_bold"
        android:textSize="@dimen/little_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/phone_cost"
        app:layout_constraintStart_toEndOf="@+id/phone_cost" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:layout_marginBottom="@dimen/margin_8_dp"
        android:elevation="@dimen/margin_4_dp"
        tools:text="Samsung Galaxy s20 Ultra"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/mark_pro_regular"
        android:textSize="@dimen/little_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/like_button"
        android:layout_width="@dimen/like_button_width"
        android:layout_height="@dimen/like_button_height"
        android:layout_marginTop="@dimen/margin_12_dp"
        android:layout_marginEnd="@dimen/margin_12_dp"
        android:background="@drawable/default_category"
        android:elevation="@dimen/margin_16_dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_heart"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>