<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/margin_20_dp"
        android:layout_height="@dimen/margin_20_dp"
        app:layout_constraintEnd_toEndOf="@+id/cpu_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/cpu_value"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cpu" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/margin_20_dp"
        android:layout_height="@dimen/margin_20_dp"
        app:layout_constraintEnd_toEndOf="@+id/camera_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/camera_value"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/margin_20_dp"
        android:layout_height="@dimen/margin_20_dp"
        app:layout_constraintEnd_toEndOf="@+id/ssd_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ssd_value"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ssd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/margin_20_dp"
        android:layout_height="@dimen/margin_20_dp"
        app:layout_constraintEnd_toEndOf="@+id/sd_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/sd_value"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sd" />

    <TextView
        android:id="@+id/cpu_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:fontFamily="@font/mark_pro_regular"
        app:layout_constraintEnd_toStartOf="@+id/camera_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:text="Exynos 990" />

    <TextView
        android:id="@+id/camera_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:fontFamily="@font/mark_pro_regular"
        app:layout_constraintEnd_toStartOf="@+id/ssd_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cpu_value"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:text="108 + 12 mp" />

    <TextView
        android:id="@+id/ssd_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:fontFamily="@font/mark_pro_regular"
        app:layout_constraintEnd_toStartOf="@+id/sd_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/camera_value"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:text="8 GB" />

    <TextView
        android:id="@+id/sd_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:fontFamily="@font/mark_pro_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ssd_value"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:text="256 GB" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:fontFamily="@font/mark_pro_heavy"
        android:text="@string/select_color_and_capacity"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpu_value" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/left_color_button"
        android:layout_width="@dimen/margin_40_dp"
        android:layout_height="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_16_dp"
        android:background="@color/orange"
        android:scaleType="centerInside"
        android:src="@drawable/vector__5_"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/right_color_button"
        android:layout_width="@dimen/margin_40_dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_marginTop="@dimen/margin_16_dp"
        android:background="@color/dark_blue"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/left_color_button"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buy_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/cart_buy_button_height"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_marginTop="@dimen/margin_32_dp"
        android:layout_marginEnd="@dimen/margin_32_dp"
        android:background="@drawable/background_done_button"
        android:fontFamily="@font/mark_pro_heavy"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_color_button"
        tools:text="Add to cart             $1500" />

    <LinearLayout
        android:id="@+id/capacity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16_dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/right_color_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/appCompatToggleButton"
            android:layout_width="@dimen/toggle_button_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_20_dp"
            android:background="@drawable/background_capacity_selector"
            android:fontFamily="@font/mark_pro_heavy"
            android:textOff="@string/gb"
            android:textOn="@string/gb" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/appCompatToggleButton2"
            android:layout_width="@dimen/toggle_button_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_32_dp"
            android:background="@drawable/background_capacity_selector"
            android:fontFamily="@font/mark_pro_heavy"
            android:textOff="@string/gb"
            android:textOn="@string/gb" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>