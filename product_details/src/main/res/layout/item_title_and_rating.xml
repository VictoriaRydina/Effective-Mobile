<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:fontFamily="@font/mark_pro_bold"
        tools:text="Galaxy Note 20 Ultra"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/biggest_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/details_favorite_button"
        android:layout_width="@dimen/margin_40_dp"
        android:layout_height="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:layout_marginEnd="@dimen/margin_32_dp"
        android:background="@drawable/background_clear_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_heart"
        android:scaleType="center"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rating_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_8_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_phone_name"
        app:srcCompat="@drawable/rating_stars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rating_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:fontFamily="@font/mark_pro_bold"
        tools:text="4.5"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/title_phone_name"
        app:layout_constraintStart_toEndOf="@+id/rating_image"
        app:layout_constraintTop_toBottomOf="@+id/title_phone_name" />
</androidx.constraintlayout.widget.ConstraintLayout>