<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_32_dp"
    android:layout_marginTop="@dimen/margin_42_dp"
    android:layout_marginEnd="@dimen/margin_32_dp"
    android:background="@color/dark_blue">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cart_phone_image"
        android:layout_width="@dimen/cart_image_width"
        android:layout_height="@dimen/cart_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/samsung" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cart_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginBottom="@dimen/margin_6_dp"
        android:minLines="2"
        tools:text="Galaxy Note 20  Ultra"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/mark_pro_bold"
        app:layout_constraintBottom_toTopOf="@+id/cart_item_price"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/cart_phone_image"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginBottom="@dimen/margin_3_dp"
        tools:text="$3000.00"
        android:textColor="@color/orange"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/mark_pro_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart_phone_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_4_dp"
        android:text="1"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/mark_pro_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16_dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_21" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageButton2"
        android:layout_width="@dimen/margin_40_dp"
        android:layout_height="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_16_dp"
        android:background="@drawable/background_clear_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_basket" />
</androidx.constraintlayout.widget.ConstraintLayout>